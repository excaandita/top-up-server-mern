
<table id="example2" class="table table-hover">
    <thead>
    <tr>
      <th>No</th>
      <th>ID</th>
      <th>Nama Akun Pemilik</th>
      <th>Nama Bank</th>
      <th>No Rekening</th>
      <th>Aksi</th>
    </tr>
    </thead>
    <tbody>
        <% for(let i = 0; i < bank.length; i++) { %>
            <tr>
                <td width="5%"><%= i + 1 %></td>
                <td width="15%"><%= bank[i].id %></td>
                <td width="25%"><%= bank[i].name %></td>
                <td width="15%"><%= bank[i].nameBank %></td>
                <td width="20%"><%= bank[i].noRekening %></td>
                <td width="15%">
                    <form action="/bank/delete/<%= bank[i]._id %>?_method=DELETE" method="POST">
                        <a href="/bank/edit/<%= bank[i]._id %>" class="btn btn-info btn-xs"><i class="fas fa-pencil-alt"></i> Ubah </a>
                        <button class="btn btn-danger btn-xs"><i class="fas fa-trash"></i> Hapus</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>