<table id="example2" class="table table-hover">
    <thead>
    <tr>
      <th>No</th>
      <th>ID</th>
      <th>Nama</th>
      <th>Aksi</th>
    </tr>
    </thead>
    <tbody>
        <% for(let i = 0; i < category.length; i++) { %>
            <tr>
                <td width="5%"><%= i + 1 %></td>
                <td width="15%"><%= category[i].id %></td>
                <td width="65%"><%= category[i].name %></td>
                <td width="15%">
                    <form action="/category/delete/<%= category[i]._id %>?_method=DELETE" method="POST">
                        <a href="/category/edit/<%= category[i]._id %>" class="btn btn-info btn-sm"><i class="fas fa-pencil-alt"></i> Ubah </a>
                        <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Hapus</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </tbody>
  </table>